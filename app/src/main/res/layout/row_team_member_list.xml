<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/gap_small"
    android:paddingLeft="@dimen/gap_normal"
    android:paddingRight="@dimen/gap_normal"
    android:paddingTop="@dimen/gap_small">


    <tab.com.whoiswhorx.ui.RoundedImageView
        android:id="@+id/imgPhoto"
        android:layout_width="@dimen/photo_size"
        android:layout_height="@dimen/photo_size"
        android:layout_marginRight="@dimen/team_member_row_image_margin"
        android:adjustViewBounds="true"
        android:src="@drawable/photo_placeholder" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <tab.com.whoiswhorx.ui.WhoIsWhoTextView
            android:id="@+id/txtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typeface="roboto_bold"
            tools:text="@string/dummy_text" />

        <tab.com.whoiswhorx.ui.WhoIsWhoTextView
            android:id="@+id/txtJobTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:typeface="roboto_italic"
            tools:text="@string/dummy_text" />
    </LinearLayout>

</LinearLayout>